{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "_lib/*": ["./lib/*"],
      "_app/*": ["./src/*"],
      "_public/*": ["./public/*"],

      "_hooks/*": ["./lib/hooks/*"],

      "_utils/*": ["./lib/utils/*"],

      "_theme/*": ["./lib/theme/*"],

      "_ui/*": ["./lib/components/ui/*"],

      "_layout/*": ["./lib/components/layout/*"],

      "_features/*": ["./src/features/*"],

      "_routes/*": ["./src/app/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
